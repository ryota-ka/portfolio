$blue = #3498db
$gray = #888
$green = #26c45f
$red = #ff535c
$white = #fff
$yellow = #ff8900

html
  font-size: 15px
  height: 100%

body
  background-color: $white
  color: #333
  font-family: Lato, sans-serif
  font-size: 1rem
  height: 100%
  line-height: 1.4
  letter-spacing: .02rem
  padding: 20px 3%
  position: relative
  -webkit-text-size-adjust: 100%

@media screen and (min-width: 1200px)
  #photo
    background-image: url('./photo.jpg')
    background-position: right top
    background-repeat: no-repeat
    background-size: contain
    height: 100%
    left: 0
    position: fixed
    top: 0
    width: 100%
    z-index: -1

  #overlay
    background-color: $white
    height: 100%
    left: 0
    opacity: 0
    position: absolute
    top: 0
    width: 100%

.nowrap
  white-space: nowrap

.label
  border-radius: 3px
  border-style: solid
  border-width: 1px
  font-size: 0.8rem
  margin-left: 2px
  padding: 1px 3px
  vertical-align: text-bottom
  white-space: nowrap

  &.green
    border-color: $green
    color: $green

  &.gray
    border-color: $gray
    color: $gray

  &.red
    border-color: $red
    color: $red

  &.yellow
    border-color: $yellow
    color: $yellow

  .fa
    margin-right: 1px

main
  a
    text-decoration: none
    &:link, &:visited
      color: #3498db

    &:hover
      color: $green
      text-decoration: none

  h1
    font-weight: bold

  h2
    color: #666
    font-size: 1.5rem
    font-weight: bold

    &::before
      content: '# '

  h3::before
    content: '## '

  section
    margin-bottom: 50px
    padding: 5px 0

  ul
    padding-left: 2rem

    li
      list-style-type: none
      margin-bottom: 0.2rem

#profile, #affiliation
  dl
    margin-left: 1rem

    dt
      margin-bottom: 0.5rem
      margin-top: 1rem

      &::after
        content: ':'

    dd
      margin-bottom: 0.5rem

    .duration
      @extend .nowrap

      color: $gray

#products
  .product
    padding: 10px 3%

    .description
      padding: 0 20px

    h3 a
      color: #666
      font-weight: normal

nav
  bottom: 20px
  padding: 10px
  position: fixed
  right: 20px
  text-align: right

  ul
    margin: 0
    padding: 0

    li
      list-style-type: none

      a
        &:link, &:active, &:visited
          text-decoration: none

      &.active
        color: $green

        a
          &:link, &:active, &:visited
            color: $green
            text-decoration: none
