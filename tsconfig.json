{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dest",
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": [
    "src/**/*.ts"
  ]
}
